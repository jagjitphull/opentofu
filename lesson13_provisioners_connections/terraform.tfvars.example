# =============================================================================
# Example Terraform Variables File
# =============================================================================
# Copy this file to terraform.tfvars and customize for your environment
# WARNING: Never commit terraform.tfvars to version control!
# =============================================================================

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# EC2 Instance Configuration
instance_type    = "t3.micro"
root_volume_size = 8

# SSH Key Configuration - Option 1: Generate new key
use_existing_key = false

# SSH Key Configuration - Option 2: Use existing key
# Uncomment and configure these if using an existing key:
# use_existing_key    = true
# existing_key_name   = "my-aws-key-pair"
# existing_key_path   = "~/.ssh/my-key.pem"

# Network Configuration
# IMPORTANT: For production, restrict this to your IP address
# Find your IP: curl ifconfig.me
allowed_ssh_cidr = "0.0.0.0/0"  # WARNING: This allows SSH from anywhere!

# Example with restricted access:
# allowed_ssh_cidr = "203.0.113.0/32"  # Replace with your IP

# Provisioner Configuration
enable_advanced_config = false
provisioner_timeout    = "5m"

# Additional Tags
additional_tags = {
  Project     = "OpenTofu Training"
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Purpose     = "Learning"
}
